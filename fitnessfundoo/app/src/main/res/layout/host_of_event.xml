<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3d3d3"
    tools:context="com.fitnessfundoo.newActivity.HostOfEvent"
    android:id="@+id/container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="top"
            android:minHeight="?android:attr/actionBarSize"
            android:background="@drawable/gradientbackground"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:background="@drawable/gradientbackground"
                android:id="@+id/rellayout1"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="45dp"
                    app:srcCompat="@android:drawable/sym_def_app_icon" />


                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/interest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:textColor="#fff"
                    android:textSize="17sp" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/followers_count"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="18sp"/>


                <Button
                    android:layout_below="@+id/followers_count"
                    android:id="@+id/follow_user"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/fitness_fundoo__color"
                    android:text="Follow"
                    android:textColor="@color/white" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="User Sports and Level "
            android:id="@+id/details"
            android:layout_below="@+id/rellayout1"
            android:gravity="center"
            android:layout_span="3"
            android:padding="18dip"
            android:background="@color/btn_login_bg"
            android:textColor="#000"/>


                <RelativeLayout
                    android:id="@+id/rellayout2"
                    android:layout_below="@+id/rellayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_with_shadow"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:layout_marginLeft="7dp"
                        android:layout_marginBottom="7dp"
                        android:id="@+id/hostlebel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Interest"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:textSize="20dp"
                        android:layout_marginBottom="7dp"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:id="@+id/hostExpertise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level"
                        android:gravity="right"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@+id/hostlebel"/>


                    <View android:id="@+id/divider"
                        android:layout_below="@+id/hostlebel"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>


                    <LinearLayout
                        android:id="@+id/list"
                        android:layout_below="@+id/divider"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:divider="@color/list_divider"
                        android:dividerHeight="1dp"
                        android:listSelector="@drawable/listt_row_selector_review"
                        android:clickable="false"
                        >

                    </LinearLayout>


                </RelativeLayout>



                </LinearLayout>


</ScrollView>


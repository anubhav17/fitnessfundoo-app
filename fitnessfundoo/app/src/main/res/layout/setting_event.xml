<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newActivity.SettingEvent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:elevation="6dp"
        android:minHeight="?android:attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

      <RelativeLayout
            android:layout_marginTop="57dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
          <!--  <SeekBar
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/progress_drawable"
                android:thumb="@drawable/thumb_drawable"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:thumbOffset="0dp" /> -->

          <TextView
              android:id="@+id/label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Set Your Search preferences"
              android:textStyle="bold"
              android:layout_marginLeft="10dp"
              android:textColor="@color/black"
              android:textSize="17dp"/>

          <TextView
              android:layout_marginTop="10dp"
              android:id="@+id/labelEvent"
              android:text="Range for Events In K.M "
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/label"
              android:layout_marginLeft="10dp"
              android:textColor="@color/black"
              android:textSize="15dp"/>

          <SeekBar
              android:layout_below="@+id/labelEvent"
              android:id="@+id/seekBar1"
              android:progress="100"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:max="500"/>

          <TextView
              android:id="@+id/textView1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_below="@+id/seekBar1"
              android:gravity="end"
              android:layout_marginRight="15dp"
              android:layout_marginTop="5dp" />

          <TextView
             android:id="@+id/labelGym"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/textView1"
              android:layout_marginLeft="10dp"
              android:textColor="@color/black"
             android:text="Set Range for Gym In K.M"
             android:textSize="15dp"
           />

          <SeekBar
              android:id="@+id/seekBar2"
             android:layout_below="@+id/labelGym"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:progress="100"
              android:max="500"/>

          <TextView
              android:id="@+id/textView2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_below="@+id/seekBar2"
              android:gravity="end"
              android:layout_marginRight="15dp"
              android:layout_marginTop="5dp" />

          <TextView
              android:id="@+id/labelPool"
              android:layout_marginLeft="10dp"
              android:textColor="@color/black"
              android:text="Range for Swimming Pool In K.M "
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/textView2"
              android:textSize="15dp"/>


          <SeekBar
              android:id="@+id/seekBar3"
              android:layout_below="@+id/labelPool"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:progress="100"
              android:max="500"/>

          <TextView
              android:id="@+id/textView3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_below="@+id/seekBar3"
              android:gravity="end"
              android:layout_marginRight="15dp"
              android:layout_marginTop="5dp" />

          <TextView
              android:id="@+id/labelClub"
              android:text="Range for Sports Club In K.M "
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/textView3"
              android:layout_marginLeft="10dp"
              android:textColor="@color/black"
              android:textSize="15dp"/>


          <SeekBar
              android:id="@+id/seekBar4"
              android:progress="100"
              android:layout_below="@+id/labelClub"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:max="500"/>

          <TextView
              android:id="@+id/textView4"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_below="@+id/seekBar4"
              android:gravity="end"
              android:layout_marginRight="15dp"
              android:layout_marginTop="5dp" />



      </RelativeLayout>


</RelativeLayout>

